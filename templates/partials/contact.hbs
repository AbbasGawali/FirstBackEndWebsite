<div class="container-fluid mt-5 about-style" id="contactid">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <h1 class="text-center main-heading abh">Contact Us</h1>
            <p class="text-center sub-heading abp">We willl be happy to help you</p>

            <div class="row">
                <div class="col-md-6 col-12 mx-auto">
                    <form action="/contact" method="POST">

                        <div class="form-group pad">
                            <label for="exampleInputtext1">Name</label>
                            <input type="text" class="form-control" name="name" placeholder="Full Name">

                        </div>

                        <div class="form-group pad">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" class="form-control bo" name="email" id="exampleInputEmail1"
                                aria-describedby="emailHelp" placeholder="Enter email">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                                else.</small>
                        </div>
                        <div class="form-group pad">
                            <label for="exampleInputtext1">Phone Number</label>
                            <input type="number" class="form-control" name="phone" placeholder="Phone Number">

                        </div>
                        <div class="form-group pad">
                            <label for="exampleInputtext1">Message</label>
                            <input type="text" class="form-control" name="message" placeholder="Message">

                        </div>



                        <button type="submit" class="btn-style hero-btn pad pp">Submit</button>
                    </form>
                </div>

            </div>

        </div>
    </div>
</div>